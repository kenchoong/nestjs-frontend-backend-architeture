{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "monorepo": true,
  "root": "apps/gateway",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "stripe": {
      "type": "application",
      "root": "apps/stripe",
      "entryFile": "main",
      "sourceRoot": "apps/stripe/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stripe/tsconfig.app.json"
      }
    },
    "cart": {
      "type": "application",
      "root": "apps/cart",
      "entryFile": "main",
      "sourceRoot": "apps/cart/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cart/tsconfig.app.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    },
    "environment": {
      "type": "library",
      "root": "libs/environment-config",
      "entryFile": "index",
      "sourceRoot": "libs/environment-config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/environment-config/tsconfig.lib.json"
      }
    },
    "typeorm": {
      "type": "library",
